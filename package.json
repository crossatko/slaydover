{
  "name": "@crossatko/slaydover",
  "description": "A sleek, responsive, and gesture-driven drawer component for Vue and Nuxt.",
  "version": "1.1.6",
  "author": "Paul Cross",
  "homepage": "https://crossatko.dev/slaydover",
  "license": "MIT",
  "private": false,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crossatko/slaydover.git"
  },
  "bugs": {
    "url": "https://github.com/crossatko/slaydover/issues"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "build": "vite build && npm run build:types",
    "build:types": "vue-tsc --declaration --emitDeclarationOnly --outDir dist/types --p tsconfig.app.json --noEmit false",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags"
  },
  "main": "dist/slaydover.js",
  "types": "dist/types/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/slaydover.js",
      "types": "./dist/types/components/Slaydover.vue.d.ts",
      "require": "./dist/slaydover.cjs"
    },
    "./nuxt": {
      "import": "./dist/nuxt/module.mjs"
    },
    "./style.css": "./dist/slaydover.css"
  },
  "dependencies": {
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@nuxt/kit": "^4.1.3",
    "@nuxt/schema": "^4.1.3",
    "@tailwindcss/vite": "^4.1.14",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.18.6",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.14",
    "typescript": "~5.9.0",
    "vite": "^7.1.7",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vue-tsc": "^3.1.0"
  }
}
